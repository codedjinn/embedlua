{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "mingw32-make.exe",
            "options": {
                "cwd": "./build"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Copy Scripts",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "scripts\\*.lua",
                "bin",
                "/r/y"
            ],
            "group": "build"
        }
    ]
}